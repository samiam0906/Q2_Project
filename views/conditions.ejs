<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Weather</title>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

  <link type="text/css" rel="stylesheet" href="materialize/css/materialize.css" media="screen,projection" />

  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

  <nav>
    <div class="nav-wrapper blue-grey darken-1">
      <a href="#" class="brand-logo">Logo</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/users">All Users</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
  <div id="welcomeMsg">
    <h4><%= user.username %>'s dashboard</h4>
  </div>

    <br>

    <div class="row">
      <a id="geolocation" class="waves-effect waves-light btn indigo darken-2" onclick="geoFindMe()">Get my location</a>
    </div>

    <div id="out"></div>

    <div class="row">
      <form class="col s6" action="/users/<%=user.id%>/weather" method="post">
        <div class="row">
          <div class="input-field col s3">
            <input type="text" id="lat" name="lat" placeholder="Latitude">
          </div>

          <div class="input-field col s3">
            <input type="text" id="long" name="long" placeholder="Longitude">
          </div>

          <div class="input-field col s4">
            <button class="small btn waves-effect waves-light indigo darken-2" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
          </div>
        </div>
      </form>
    </div>

    <div class="row">
      <form class="col s6" action="/users/<%=user.id%>/location" method="post">
        <div class="row">
          <div class="input-field col s3">
            <input type="text" id="city" name="city" placeholder="City">
          </div>

          <div class="input-field col s3">
            <input type="text" id="state" name="state" placeholder="State / Country">
          </div>

          <%# <div class="input-field col s6">
          <select id="state">
            <option name="state" value="state" disabled selected>State / Country</option>
            <option value="NY">NY</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>
          </select>
          <label>Please select an option</label>
        </div>%>

            <div class="input-field col s4">
              <button class="btn waves-effect waves-light indigo darken-2" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
          </button>
            </div>
        </div>
      </form>
    </div>

    <br>

    <div class="row getLights">

      <!-- routing to link hue up based on temperature -->
      <form class="col s4" action="/users/<%=user.id%>/huetemp" method="get">
        <div class="input-field">
          <button class="btn waves-effect waves-light indigo darken-2" type="submit" name="action">Get Temperature Color
          <i class="material-icons right"></i>
        </button>
        </div>
      </form>

      <!-- routing to link hue up based on weather -->
      <form class="col s4" action="/users/<%=user.id%>/hueweather" method="get">
        <div class="input-field">
          <button class="btn waves-effect waves-light indigo darken-2" type="submit" name="action">Get Weather
          <i class="material-icons right"></i>
        </button>
        </div>
      </form>

    </div>


    <br>

    <div class="row">
      <div class="col s12">
        <div class="card">

          <table id="locationTemp" class="centered">
            <thead>
              <tr>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>City</th>
                <th>State / Country</th>
                <th>Temperature</th>
                <th>Weather</th>
              </tr>
            </thead>

            <tbody>
              <% if (weather.length > 0) { %>
                <% let current = weather.length -1 %>
                  <tr>
                    <td>
                      <%= weather[current].lat %>
                    </td>
                    <td>
                      <%= weather[current].long %>
                    </td>
                    <td>
                      <%= weather[current].city %>
                    </td>
                    <td>
                      <%= weather[current].state %>
                    </td>
                    <td class="tempCondition">
                      <%= weather[current].temp %>
                    </td>
                    <td class="currentWeather">
                      <%= weather[current].weather %>
                    </td>
                  </tr>
                  <% } %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>




  <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

  <%# <script type="text/javascript" src="/jquery-3.2.1.js"></script>%>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

    <%# <script type="text/javascript" src="materialize/js/materialize.min.js"></script>%>

      <script type="text/javascript" src="/js/color.js"></script>

      <script type="text/javascript" src="/js/getLocation.js"></script>

</body>

</html>

